<%= form_for(@user, html: {class: 'form-horizontal' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>First Name</label>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <%= f.text_field :last_name, class: 'form-control'%>
  </div>
  <div class="form-group">
    <label>Email</label>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Role</label>
    <%= collection_select :user, :role_id, Role.all, :id, :name, {prompt: "Please Select a role"}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <label>Password</label>
    <%= f.password_field :password, placeholder: "Leave blank if unchanged", class: 'form-control'%>
  </div>

  <hr>

  <div class="form-group">

    <%= f.submit class: "btn btn-primary" %>

    <a href="<%= url_for @user %>" class="btn btn-danger">
      Cancel
    </a>

  </div>
<% end %>
