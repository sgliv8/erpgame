<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>

<%= form_for(@user, html: {role: 'form<div></div>'}) do |f| %>
  <div class="form-group">
    <label>First Name</label>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <%= f.text_field :last_name, class: 'form-control'%>
  </div>
  <div class="form-group">
    <label>Email</label>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Role</label>
    <%= collection_select :user, :role_id, Role.all, :id, :name, {prompt: "Please Select a role"}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <label>Password</label>
    <%= f.password_field :password, placeholder: "Leave blank if unchanged", class: 'form-control'%>
  </div>

  <hr>

  <div class="form-group">

    <%= f.submit "Save", class: "btn btn-primary" %>

    <a href="<%= url_for @user %>" class="btn btn-danger">
      Cancel
    </a>

  </div>
<% end %>
