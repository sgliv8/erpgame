<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1>Welcome Back, <%= current_user.full_name %>!</h1>
    </div>
  </div>

  <div id="links">
    <div class="wrapper_skinny">
      <ul>
        <li class="current">Manage User</li>
        <li><%= link_to "Manage Product", products_path %></li>
      </ul>
    </div>
  </div>
</div>



<div class="wrapper_wide" style="padding-bottom: 5em;">
  <div class="pull-right" style="margin-bottom: 20px;">
       <%= link_to 'Create New User', new_user_path, class: 'btn btn-primary' %>
  </div>


  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role.name %></td>
          

          <td colspan="3" style="width: 20%;">
            <%= link_to 'Show', user, class: 'btn btn-default'%>
              <%= link_to edit_user_path(user), class: 'btn btn-primary' do %>
                <i class='fa fa-pencil-square-o'></i>
              <% end %>
            
            <div style="display:inline-block;">
              <button class="delete-confirm btn btn-danger"><i class="fa fa-trash-o"></i></button>
              <%= link_to user, method: :delete, class: 'delete-button' do%>
                <i class='fa fa-pencil-square-o'></i>
              <% end %>
            </div>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pull-right">
    <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
  </div>
</div>