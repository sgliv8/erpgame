
<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1>Welcome Back, <%= current_user.full_name %>!</h1>
    </div>
  </div>

  <div id="links">
    <div class="wrapper_skinny">
      <ul>
        <li><%= link_to "Manage User", users_path %></li>
        <li class="current">Manage Product</li>
      </ul>
    </div>
  </div>
</div>

<div class="pull-right" style="margin-right: 5em;">
    <%= link_to 'Create New Product', new_product_path, class: 'btn btn-primary' %>
</div>


<div id="products" class="cf">
  <div class="wrapper_wide">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="box panel panel-default">
          <%= link_to (image_tag product.image.url), product %>
          <div class="panel-body">
            <h2><%= link_to product.name, product%></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div style="padding: 3em;"></div>
