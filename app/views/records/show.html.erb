<div class="col-md-6 col-md-offset-3" style="padding-bottom: 3em;">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h2>Record Details</h2>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <h4>Round:</h4>
          <%= @record.round %>
        </div>

        <div class="form-group">
          <h4>Beginning Cash Balance:</h4>
          <%= number_with_precision(@record.begin_cash, :precision => 2) %>
        </div>

        <div class="form-group">
          <h4>Expenses:</h4>
          <%= number_with_precision(@record.expenses, :precision => 2) %>
        </div>

        <div class="form-group">
          <h4>Revenue:</h4>
          <%= number_with_precision(@record.revenue, :precision => 2) %>
        </div>

        <div class="form-group">
          <h4>Inventory Penalty:</h4>
          <%= number_with_precision(@record.inventory_penalty, :precision => 2) %>
        </div>

        <div class="form-group">
          <h4>Order Penalty:</h4>
          <%= number_with_precision(@record.order_penalty, :precision => 2) %>
        </div>

        <div class="form-group">
          <h4>Ending Cash Balance:</h4>
          <%= number_with_precision(@record.end_cash, :precision => 2) %>
        </div>

        <hr>
        <div class="form-group">

          <%= link_to 'Edit', edit_record_path(@record), class: 'btn btn-primary' %>
          <%= link_to 'Back', root_path, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>






