
<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Round</th>
      <th>Begining Cash Balance</th>
      <th>Expenses</th>
      <th>Revenue</th>
      <th>Inventory Penalty</th>
      <th>Order Penalty</th>
      <th>Ending Cash Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user.name%></td>
        <td><%= record.round %></td>
        <td><%= record.begin_cash %></td>
        <td><%= record.expenses %></td>
        <td><%= record.revenue %></td>
        <td><%= record.inventory_penalty %></td>
        <td><%= record.order_penalty %></td>
        <td><%= record.end_cash %></td>
        <td><%= link_to 'Show', record %></td>
        <td>
          <% if can? :update, record %>
            <%= link_to 'Edit', edit_record_path(record) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, record %>
            <%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_record_path %>
